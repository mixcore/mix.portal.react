  "author": {
    "name": "Mixcore Team",
    "email": "info@mixcore.org",
    "url": "https://mixcore.org"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mixcore/mix.portal.react/issues"
  },
  "homepage": "https://mixcore.org",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "next": "^13.0.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
