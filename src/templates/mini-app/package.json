    "typescript": "^5.2.2"
  },
  "files": [
    "**/*.{ts,tsx,js,jsx,css}",
    "!**/*.test.{ts,tsx,js,jsx}",
    "!**/*.spec.{ts,tsx,js,jsx}",
    "!**/__tests__/**",
    "!**/__mocks__/**",
    "*.md",
    "LICENSE",
    "cli/**"
